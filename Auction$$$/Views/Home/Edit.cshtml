@model Auction___.Models.AllLots
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/_Layout2.cshtml";
}

<form asp-action="Edit" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input name="name" type="text" asp-for="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discription" class="control-label">Description</label>
        <input type="text" asp-for="Discription" value="@Model.Discription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InitialPrice" class="control-label">Initialprice</label>
        <input type="number" asp-for="InitialPrice" value="@Model.InitialPrice" class="form-control" />
    </div>
   
    @*<div class="form-group">
            <label class="control-label">Timeduration</label>
            <input name="data" type="number" value="" class="form-control" />
        </div>*@

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>

